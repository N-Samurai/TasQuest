{
  "name": "TasQuest",
  "version": "0.0.1",
  "main": "electron-main.js",
  "scripts": {
    "dev": "concurrently -k \"next dev\" \"wait-on tcp:3000 && electron .\"",
    "pack": "npm run build:react && electron-builder --dir",
    "dist": "npm run build:react && electron-builder",
    "build:react": "cd frontend && npx next build"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "wait-on": "^7.0.0",
    "electron-builder": "^24.8.0"
  },
  "build": {
    "appId": "com.example.taskapp",
    "productName": "TasQuest",
    "files": [
      "electron-main.js",
      "preload.js",
      ".next/**",
      "frontend/out/**",
      "public/**",
      "node_modules/**"
    ],
    "asar": true,
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build"
    }
  }
}
