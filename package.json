{
  "name": "TasQuest",
  "version": "0.0.2",
  "main": "electron-main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:next\" \"npm:dev:electron\"",
    "dev:next": "npm --prefix frontend run dev",
    "dev:electron": "wait-on http://localhost:3000 && electron .",

    "export": "npm --prefix frontend run build:export",

    "pack": "npm run export && electron-builder --dir",
    "dist": "npm run export && electron-builder",

    "build:react": "npm --prefix frontend run build" 
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "wait-on": "^7.0.1",
    "electron": "^31.0.0",
    "electron-builder": "^24.8.0"
  },
  "build": {
    "appId": "com.example.taskapp",
    "productName": "TasQuest",
    "files": [
      "electron-main.js",
      "preload.js",
      "assets/**",
      "frontend/out/**",
      "node_modules/**",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets"
    }
  }
}
